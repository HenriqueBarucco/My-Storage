// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    username String @unique
    email    String @unique
    name     String
    password String

    Product Product[]

    @@map("users_tbl")
}

model Product {
    id           String   @id @default(uuid())
    name         String
    description  String
    location     String
    image        String
    isAtBox      Boolean
    quantity     Int
    price        Float
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    observations String

    User   User?   @relation(fields: [userId], references: [id])
    userId String?

    Category   Category? @relation(fields: [categoryId], references: [id])
    categoryId String?

    @@map("products_tbl")
}

model Category {
    id   String @id @default(uuid())
    name String

    Product Product[]

    @@map("categories_tbl")
}
